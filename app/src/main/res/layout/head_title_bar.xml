<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/head_parent"
                android:layout_width="match_parent"
                android:layout_height="@dimen/title_height_fifty"
                android:background="@color/white"
                android:orientation="vertical">

    <TextView
            android:id="@+id/comm_head_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:ellipsize="end"
            android:singleLine="true"
            android:maxEms="8"
            android:textColor="@color/textcolor"
            android:textSize="@dimen/title_textsize"/>

    <TextView
            android:id="@+id/head_back_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:padding="5dp"
            android:text="back"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:visibility="gone"/>

    <LinearLayout
            android:id="@+id/head_back_iv"
            android:orientation="vertical"
            android:layout_width="50dp"
            android:gravity="center"
            android:layout_marginLeft="@dimen/distance_10dp"
            android:layout_alignParentLeft="true"
            android:paddingLeft="@dimen/distance_5dp"
            android:layout_centerVertical="true"
            android:paddingBottom="@dimen/distance_5dp"
            android:layout_height="match_parent">

        <ImageView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:adjustViewBounds="true"
                android:scaleType="fitXY"


                android:src="@drawable/fanhui"/>
    </LinearLayout>

    <TextView
            android:id="@+id/head_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:padding="5dp"
            android:text="FUN"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:visibility="gone"/>

    <ImageView
            android:id="@+id/head_right_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:padding="10dp"
            android:src="@mipmap/arroww_left"
            android:visibility="gone"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#eeeeee"
            android:layout_alignParentBottom="true"
            />
</RelativeLayout>